{
	"name": "PerfMeter",
	"description": "PerfMeter",
	"version": "0.1",
	"background": {
		"scripts": [ "common.js", "background.js"],
		"persistent": true
	},
	"icons": {
		"16": "assets/icon.svg",
		"48": "assets/icon.svg",
		"128": "assets/icon.svg"
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["content-script.js"],
		"run_at": "document_start",
		"all_frames": true
	} ],
	"permissions": [
		"<all_urls>",
		"webNavigation",
		"tabs",
		"storage",
		"activeTab",
		"system.cpu",
		"system.display",
		"system.memory",
		"webRequest"
	],
	"web_accessible_resources": [
		"canvas-instrument.js",
		"css/styles.css",
		"css/Roboto_Mono/RobotoMono-Regular.ttf",
		"css/Roboto_Mono/RobotoMono-Bold.ttf"
	],
	"devtools_page": "devtools.html",
	"manifest_version": 2
}
